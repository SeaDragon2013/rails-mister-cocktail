<h1><%= @cocktail.name %></h1>
<div class="container">
  <ul>
   <% @cocktail.doses.each do |dose| %>
     <li>
       <%= dose.description %> - <%= dose.ingredient.name %>
       <%= link_to "delete", dose_path(dose), method: "delete", data: {confirm: "Are you sure?" } %>
     </li>
    <% end %>
  </ul>
  <div>
    <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
